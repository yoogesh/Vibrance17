
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TableLayout
        android:id="@+id/threeByThreeTble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3,4,5,6,7"
        android:padding="10dp"
    >
        <TableRow android:id="@+id/tableRw1"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"

        >
            <LinearLayout
                android:id="@+id/mygalley1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal"
            >
                <ImageView
                    android:id="@+id/button1"
                    android:layout_width="0dp"
                    android:layout_weight="2.85"
                    android:layout_height="400dp"
                    android:layout_gravity="center"
                    android:background="@drawable/adaptune"
                    android:textStyle="bold"
                    android:textSize="45dp"
                    android:textColor="#ffffff"
                    android:fontFamily="serif-monospace"
                    android:textAlignment="center"
                />

            </LinearLayout>


        </TableRow>

        <TableRow android:id="@+id/tableRow3"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"

        >


            <LinearLayout
                android:id="@+id/mygallery3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
            >
                <Button
                    android:id="@+id/button4"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:background="@drawable/timeicon"
                />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:background="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:text="9-10AM |17th,march17"
                    android:textColor="#ffffff"
                    android:textSize="25dp"

                />
            </LinearLayout>

        </TableRow>

        <TableRow android:id="@+id/tableRow4"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"

        >


            <LinearLayout
                android:id="@+id/mygallery4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
            >
                <Button
                    android:id="@+id/button5"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:background="@drawable/abouticon"
                />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:background="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:text="Group Event"
                    android:textColor="#ffffff"
                    android:textSize="25dp"

                />
            </LinearLayout>


        </TableRow>



        <TableRow android:id="@+id/tableRow5"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"

        >


            <LinearLayout
                android:id="@+id/mygallery5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
            >
                <Button
                    android:id="@+id/button7"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:background="@drawable/venueicon"
                />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:background="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.4"
                    android:text="Academic block"
                    android:textColor="#ffffff"
                    android:textSize="25dp"

                />
            </LinearLayout>


        </TableRow>



        <TableRow android:id="@+id/tableRow6"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"

        >


            <LinearLayout
                android:id="@+id/mygallery6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
            >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="A pure and conventional form of debating where the spontaneity and argumentation skills of the participants are tested. 2 teams of three competing against each other within the limited time period to put forth arguments and rebut the opposition."
                    android:textColor="#ffffff"
                    android:textSize="25dp"


                />
            </LinearLayout>


        </TableRow>
        <TableRow android:id="@+id/tableRow8"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"

        >


            <LinearLayout
                android:id="@+id/mygallery7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="3.3"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
            >
                <Button
                    android:id="@+id/button15"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="33dp"
                    android:layout_gravity="left"
                    android:background="@drawable/scicon"
                />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent"
                    android:background="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Anandita Misra
 6254284723"
                    android:textColor="#ffffff"
                    android:textSize="25dp"
                />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.01"
                    android:layout_height="match_parent"
                    android:background="#000000"/>
                <Button
                    android:id="@+id/button9"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="33dp"
                    android:layout_gravity="left"
                    android:background="@drawable/contacticon"
                />

            </LinearLayout>

        </TableRow>
        <TableRow android:id="@+id/tableRow2"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"

        >


            <LinearLayout
                android:id="@+id/mygallery2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:paddingTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="horizontal"
            >
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:background="#000000"/>
                <Button
                    android:id="@+id/button11"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="60dp"
                    android:layout_gravity="left"
                    android:background="@drawable/register_button"

                />
                <View
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="match_parent"
                    android:background="#000000"/>

            </LinearLayout>

        </TableRow>


    </TableLayout>


</ScrollView>